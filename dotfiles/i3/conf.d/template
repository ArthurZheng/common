#### DW
set $mod Mod4
bindsym XF86AudioRaiseVolume exec $HOME/.path/volume-shift 10%+
bindsym XF86AudioLowerVolume exec $HOME/.path/volume-shift 10%-
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
workspace_auto_back_and_forth no
focus_follows_mouse no
bindsym $mod+r exec i2-input -F 'exec /home/daemonl/.path/i3rename "%s"' -P 'New name: '
bindsym $mod+Shift+l exec i3lock -c 002200
bindsym $mod+Shift+d exec display-auto
bindsym $mod+Ctrl+Shift+d exec xrandr --auto

bindsym $mod+slash exec dbus-send  --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym $mod+period exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym $mod+comma exec dbus-send  --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

for_window [title="Calculator"] floating enable
for_window [instance="gpick" class="Gpick"] floating enable
for_window [instance="wicd-client.py" class="Wicd-client.py"] floating enable
bindcode 147 exec xcalc
bindcode --release 107 exec --no-startup-id import ~/screenshot-`date +%F-%T`.png

font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec xterm

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
bindsym $mod+space exec rofi -show run

bindsym $mod+Left  exec "focus left"
bindsym $mod+Down  exec "focus down"
bindsym $mod+Up    exec "focus up"
bindsym $mod+Right exec "focus right"
#bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

